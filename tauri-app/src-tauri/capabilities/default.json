{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "process:default",
    "dialog:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {"path": "$DOCUMENT/**"},
        {"path": "$DOCUMENT/notes/**"}
      ]
    },
    {
      "identifier": "fs:write-all",
      "allow": [
        {"path": "$DOCUMENT/**"},
        {"path": "$DOCUMENT/notes/**"}
      ]
    },
    {
      "identifier": "fs:read-all",
      "allow": [
        {"path": "$DOCUMENT/**"},
        {"path": "$DOCUMENT/notes/**"}
      ]
    }
  ]
}